{
  "name": "tailwindcss-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tw:build": "tailwind build ./src/css/tailwind.css -o ./public/css/styles.css",
    "tw:prod": "NODE_ENV=production postcss ./src/css/tailwind.css -o ./public/css/styles.css",
    "tw:watch": "onchange 'tailwind.config.js' 'src/**/*.css' -- npm run tw:build",
    "tw:server": "live-server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "onchange": "^7.1.0",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2"
  }
}
